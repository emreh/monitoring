{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Simple Java Agent Configuration",
  "description": "Unified configuration schema for the custom Java instrumentation agent.",
  "type": "object",
  "properties": {
    "debug": {
      "type": "boolean",
      "description": "Enable verbose debug logs inside the agent."
    },
    "exporter": {
      "type": "object",
      "description": "Controls where spans are exported.",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "console",
            "http"
          ],
          "description": "Exporter backend: console or http."
        },
        "batchSize": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of spans to batch before export."
        },
        "capacity": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum queue capacity for pending spans."
        },
        "endpoint": {
          "type": "string",
          "format": "uri",
          "description": "HTTP endpoint when exporter.type = http."
        }
      },
      "required": [
        "type"
      ]
    },
    "instrumentation": {
      "type": "object",
      "description": "Enable/disable specific instrumentation modules.",
      "properties": {
        "executor": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Wrap Runnable/Callable submitted to ExecutorService."
            }
          }
        },
        "jdbc": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable JDBC connection+query tracing."
            }
          }
        },
        "httpClient": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable tracing of outbound HTTP calls."
            }
          }
        },
        "scheduled": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable tracing for @Scheduled methods."
            }
          }
        },
        "timing": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable timing instrumentation for selected entrypoints."
            },
            "entrypoints": {
              "type": "array",
              "description": "Class patterns to instrument for timing.",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}
